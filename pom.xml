<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.inmobi.channels</groupId>
    <artifactId>cas</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <url>https://github.corp.inmobi.com/channel-adserve</url>

    <parent>
      <groupId>com.inmobi</groupId>
      <artifactId>inmobi-master-pom</artifactId>
      <version>1.0.1</version>
    </parent>

    <modules>
         <module>Repository</module>
         <module>Server</module>
    </modules>
    <properties>
		<maven-release-plugin>2.3.2</maven-release-plugin>
    </properties>
    <scm>
		<connection>scm:git:https://github.corp.inmobi.com/channel-adserve/cas.git</connection>
		<url>scm:git:https://github.corp.inmobi.com/channel-adserve/cas.git</url>
		<developerConnection>scm:git:https://github.corp.inmobi.com/channel-adserve/cas.git</developerConnection>
		<tag>HEAD</tag>
    </scm>

    <repositories>
      <repository>
         <id>releases</id>
         <name>Releases</name>
         <url>http://maven.scm.corp.inmobi.com/content/repositories/releases/</url>
      </repository>
    </repositories>

    <dependencyManagement>
      <dependencies>
	<!-- Submodule inter dependency -->
	<dependency>
	  <groupId>inmobi.adserve.channels</groupId>
	  <artifactId>repository</artifactId>
	  <version>1.0-SNAPSHOT</version>
	</dependency>
	<dependency>
	  <groupId>inmobi.adserve.channels</groupId>
	  <artifactId>server</artifactId>
	  <version>2.1-SNAPSHOT</version>
	</dependency>
       </dependencies>
    </dependencyManagement>
     <build>  
     <plugins> 
     <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-release-plugin</artifactId>
	<version>${maven-release-plugin}</version>
     </plugin> 
      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-jar-plugin</artifactId>
         <configuration>
       <archive>
         <manifest>
           <mainClass>com.inmobi.adserve.channels.reporting.ReportFetcher</mainClass>
           <packageName>com.inmobi.adserve.channels.reporting</packageName>
         </manifest>
         <manifestEntries>
           <mode>development</mode>
           <url>${pom.url}</url>
         </manifestEntries>
       </archive>
         </configuration>
     </plugin>
     </plugins>  
    </build>  
</project>
