    <profiles>
        <profile>
            <id>casauto</id>
            <modules>
                <module>casautomation</module>
            </modules>
        </profile>
        <profile>
            <id>unit-coverage</id>
            <build>
                <plugins>
                    <plugin>
                        <!-- Used for instrumenting the modules -->
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <configuration>
                            <classifier>cobertura</classifier>
                            <check />
                        </configuration>
                        <executions>
                            <execution>
                                <!-- This is called for all modules except integration-tests where
                                    it is suppressed -->
                                <id>cobertura-instrument</id>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>instrument</goal>
                                </goals>
                            </execution>
                            <execution>
                                <!-- Suppressing the cobertura plugin defined in the parent pom -->
                                <id>unit-test</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <!-- Used for generating the instrumented jars for cobertura -->
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>generate-test-sources</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <archive>
                                        <manifest>
                                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                            <addClasspath>true</addClasspath>
                                        </manifest>
                                        <manifestEntries>
                                            <Implementation-Build>${buildNumber}/${ciBuildInfo}</Implementation-Build>
                                        </manifestEntries>
                                    </archive>
                                    <classesDirectory>${basedir}/target/generated-classes/cobertura</classesDirectory>
                                    <classifier>cobertura</classifier>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
