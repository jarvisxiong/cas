<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.inmobi.channels</groupId>
    <artifactId>cas</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>
    <url>https://github.corp.inmobi.com/channel-adserve</url>

    <parent>
      <groupId>com.inmobi</groupId>
      <artifactId>inmobi-master-pom</artifactId>
      <version>1.0.1</version>
    </parent>

    <modules>
         <module>Repository</module>
         <module>Server</module>
    </modules>
    <properties>
		<maven-release-plugin>2.3.2</maven-release-plugin>
    </properties>
    <scm>
		<connection>scm:git:https://github.corp.inmobi.com/channel-adserve/cas.git</connection>
		<url>scm:git:https://github.corp.inmobi.com/channel-adserve/cas.git</url>
		<developerConnection>scm:git:https://github.corp.inmobi.com/channel-adserve/cas.git</developerConnection>
		<tag>HEAD</tag>
    </scm>

    <repositories>
      <repository>
         <id>releases</id>
         <name>Releases</name>
         <url>http://maven.scm.corp.inmobi.com/content/repositories/releases/</url>
      </repository>
    </repositories>

    <dependencyManagement>
      <dependencies>
	<!-- Submodule inter dependency -->
	<dependency>
	  <groupId>inmobi.adserve.channels</groupId>
	  <artifactId>repository</artifactId>
	  <version>1.0</version>
	</dependency>
	<dependency>
	  <groupId>inmobi.adserve.channels</groupId>
	  <artifactId>server</artifactId>
	  <version>2.1</version>
	</dependency>
       </dependencies>
    </dependencyManagement>
     <build>  
     <plugins> 
 <plugin>
    <artifactId>maven-assembly-plugin</artifactId>
    <version>2.3</version>
    <configuration>
     <descriptorRefs>
      <descriptorRef>jar-with-dependencies</descriptorRef>
     </descriptorRefs>
<!--      <archive> -->
<!--       <manifest> -->
<!--        <mainClass>com.inmobi.appengage.general.segment.SegmentMigrator</mainClass> -->
<!--       </manifest> -->
<!--      </archive> -->
     <archive>
      <manifest>
       <mainClass>MessageQueueTest</mainClass>
      </manifest>
     </archive>
    </configuration>
    <executions>
     <execution>
      <id>make-assembly</id> <!-- this is used for inheritance merges -->
      <phase>package</phase> <!-- bind to the packaging phase -->
      <goals>
       <goal>single</goal>
      </goals>
     </execution>
    </executions>
   </plugin>

     </plugins>  
    </build>  
</project>
